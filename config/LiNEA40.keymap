            >;

            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        //1

        Mac_Win {
            bindings = <
&trans  &kp LC(LS(TAB))  &kp LC(UP_ARROW)  &kp LC(TAB)    &kp LC(J)                            &kp RC(RA(D))      &kp RC(RA(E))     &kp LG(LS(NUMBER_3))  &kp LG(LS(NUMBER_4))  &kp LG(LS(N5))
&trans  &kp LC(LEFT)     &kp LS(LG(T))     &kp LS(RIGHT)  &kp SPACE                            &kp RC(K)          &kp RC(RA(LEFT))  &kp F11               &kp RC(RA(RIGHT))     &kp RC(RA(ENTER))
&trans  &kp LG(LEFT)     &kp LC(DOWN)      &kp LG(RIGHT)  &kp LC(LG(SPACE))                    &kp RC(SEMICOLON)  &trans            &kp F19               &trans                &trans
&trans  &trans           &trans            &trans         &trans             &trans    &trans  &trans                               &trans                &trans                &trans
            >;
        };

        //2

        Win_Base {
            bindings = <
&kp Q             &kp W         &kp E               &kp R   &kp T                                           &kp Y        &kp U  &kp I                 &kp O           &kp P
&kp A             &kp S         &kp D               &kp F   &kp G                                           &kp H        &kp J  &kp K                 &kp L           &kp RIGHT_SHIFT
&kp Z             &kp X         &kp C               &kp V   &kp B                                           &kp N        &kp M  &kp COMMA             &kp PERIOD      &kp SLASH
&kp LEFT_COMMAND  &kp LEFT_ALT  &kp RC(LANGUAGE_2)  &trans  &lt 8 LANGUAGE_1  &lt 3 SPACE    &kp BACKSPACE  &lt 9 ENTER         &lt 10 RIGHT_BRACKET  &kp UNDERSCORE  &kp LS(DEL)
            >;

